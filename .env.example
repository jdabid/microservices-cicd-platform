# ===========================================
# Environment Variables Template
# Copy to .env and fill with actual values
# ===========================================

# Project
PROJECT_NAME=microservices-cicd-platform
ENVIRONMENT=development

# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme
POSTGRES_DB=appointments_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Backend API
API_PORT=8000
API_V1_PREFIX=/api/v1
DEBUG=True
SECRET_KEY=changeme-use-secure-random-string
LOG_LEVEL=INFO

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:80"]

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_LOG_LEVEL=INFO

# Frontend
VITE_API_URL=http://localhost:8000

# Flower
FLOWER_PORT=5555
FLOWER_BASIC_AUTH=user:password

# Email (Future)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@example.com

# Monitoring (Future)
SENTRY_DSN=

# Database Backup
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
